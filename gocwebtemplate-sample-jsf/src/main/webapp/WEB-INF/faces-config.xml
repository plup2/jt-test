<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
    <!--  ============================================================= -->
    <!--  this declares the CDN configuration properties file, please do 
    	  NOT remove or modify -->
    <application>
		<resource-bundle>
			<base-name>goc.webtemplate.global.config.cdn</base-name>
			<var>cdn</var>
		</resource-bundle>
	</application>
	<!--  ============================================================= -->
	
	<!--  ============================================================= -->
	<!--  The following set of bean declarations are used by the GoC Template, 
		  please do NOT remove or modify -->
    <managed-bean>
    	<managed-bean-name>defaulttemplatejsfbean</managed-bean-name>
    	<managed-bean-class>goc.webtemplate.component.jsf.DefaultTemplateCoreBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>applicationscopebean</managed-bean-name>
    	<managed-bean-class>goc.webtemplate.component.jsf.MasterApplicationBean</managed-bean-class>
    	<managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>switchlocalebean</managed-bean-name>
    	<managed-bean-class>goc.webtemplate.component.jsf.SwitchLocaleBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
    	<managed-bean-name>leavesecuresiteredirectbean</managed-bean-name>
    	<managed-bean-class>goc.webtemplate.component.jsf.LeaveSecureSiteRedirectBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <!--  ============================================================= -->
</faces-config>
